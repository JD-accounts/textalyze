<table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="column1">Text</th>
        <th class="column1">URL</th>
        <th class="column2">Size</th>
      </tr>
    </thead>
      <% docs.each do |doc| %>
      <tr>
      	<td class="library_item column_1">  <%= link_to doc.body[0..17], "/documents/#{doc.id}" %></td>
      	<% if doc.url != nil %>
      		<td class="library_item column_2">  <%= link_to doc.url[0..37], doc.url %></td>
      	<% else %>
      		<td class="library_item column_2">  <%= doc.url %></td>
      	<% end %>
      	<td class="library_item column_3">  <%= doc.word_count %></td>
      </tr>
      <% end %>
 </table>



